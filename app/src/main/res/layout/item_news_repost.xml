<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin5"
    card_view:cardCornerRadius="@dimen/cardRadius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_group_item_news_repost"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginTop="@dimen/margin10"
            android:src="@drawable/header"/>

        <TextView
            android:id="@+id/title_item_news_repost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/image_group_item_news_repost"
            android:singleLine="true"
            android:text="@string/title_title"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/time_item_news_repost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_item_news_repost"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/image_group_item_news_repost"
            android:text="@string/title_time"
            />

        <TextView
            android:id="@+id/text_item_news_repost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_group_item_news_repost"
            android:layout_margin="@dimen/margin10"
            android:text="@string/title_text"
            />

        <include
            android:id="@+id/post"
            layout="@layout/item_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_item_news_repost"
            android:layout_marginLeft="@dimen/margin10"/>

        <ImageView
            android:id="@+id/image_item_news_repost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/post"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="@dimen/margin5"
            android:src="@drawable/header"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>


