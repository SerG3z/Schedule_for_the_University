<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_item"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin5"
        card_view:cardCornerRadius="@dimen/cardRadius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_group_item_news"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/header"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginLeft="@dimen/margin10"/>

            <TextView
                android:id="@+id/title_item_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_toRightOf="@id/image_group_item_news"
                android:text="Title Title Title Title Title "
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/time_item_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_item_news"
                android:text="time time time time time "
                android:layout_toRightOf="@id/image_group_item_news"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/text_item_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_group_item_news"
                android:layout_margin="@dimen/margin10"
                android:text="text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text "
                />

            <ImageView
                android:id="@+id/image_item_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/header"
                android:layout_below="@id/text_item_news"
                android:layout_marginTop="@dimen/margin5"
                android:layout_marginBottom="10dp"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

