<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/time_lesson"
            android:layout_marginLeft="@dimen/margin16"
            android:layout_marginTop="@dimen/margin16"
            android:layout_marginRight="@dimen/margin16"
            android:layout_marginBottom="@dimen/margin5" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin16"
            android:paddingRight="@dimen/margin16">

            <Spinner
                android:id="@+id/time_lesson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_marginRight="@dimen/margin16" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_black_48dp"
                android:layout_weight="1"
                android:id="@+id/btn_add_time"
                android:background="@android:color/transparent" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/name_lesson"
            android:layout_marginLeft="@dimen/margin16"
            android:layout_marginTop="@dimen/margin16"
            android:layout_marginRight="@dimen/margin16"
            android:layout_marginBottom="@dimen/margin5" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin16"
            android:paddingRight="@dimen/margin16">

            <Spinner
                android:id="@+id/name_lesson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_marginRight="@dimen/margin16" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_black_48dp"
                android:layout_weight="1"
                android:id="@+id/btn_add_name_lesson"
                android:background="@android:color/transparent" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/fio_teacher"
            android:layout_marginLeft="@dimen/margin16"
            android:layout_marginTop="@dimen/margin16"
            android:layout_marginRight="@dimen/margin16"
            android:layout_marginBottom="@dimen/margin5" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin16"
            android:paddingRight="@dimen/margin16">

            <Spinner
                android:id="@+id/fio_teacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_marginRight="@dimen/margin16" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_black_48dp"
                android:layout_weight="1"
                android:id="@+id/btn_add_fio_teacher"
                android:background="@android:color/transparent" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/number_auditory"
            android:layout_marginLeft="@dimen/margin16"
            android:layout_marginTop="@dimen/margin16"
            android:layout_marginRight="@dimen/margin16"
            android:layout_marginBottom="@dimen/margin5" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin16"
            android:paddingRight="@dimen/margin16">

            <Spinner
                android:id="@+id/number_auditory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_marginRight="@dimen/margin16" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_black_48dp"
                android:layout_weight="1"
                android:id="@+id/btn_add_number_auditory"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/type_lesson"
            android:layout_marginLeft="@dimen/margin16"
            android:layout_marginTop="@dimen/margin16"
            android:layout_marginRight="@dimen/margin16"
            android:layout_marginBottom="@dimen/margin5" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin16"
            android:paddingRight="@dimen/margin16">

            <Spinner
                android:id="@+id/type_lesson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin16"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_black_48dp"
                android:layout_weight="1"
                android:id="@+id/btn_add_type_lesson"
                android:background="@android:color/transparent" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/type_week"
            android:layout_marginLeft="@dimen/margin16"
            android:layout_marginTop="@dimen/margin16"
            android:layout_marginRight="@dimen/margin16"
            android:layout_marginBottom="@dimen/margin5" />

        <Spinner
            android:id="@+id/type_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin16"
            android:entries="@array/type_week_list"
            style="@style/Widget.AppCompat.Spinner.Underlined" />

        <Button
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/margin16"
            android:background="@android:color/holo_orange_dark"
            android:text="@string/button_save"
            />

    </LinearLayout>

</ScrollView>

