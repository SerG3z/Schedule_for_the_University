<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/margin5"
    card_view:cardCornerRadius="@dimen/cardRadius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin10">

        <TextView
            android:id="@+id/task_item_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="day"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/text_size_item_lesson"
            android:layout_marginLeft="@dimen/margin5"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/task_item_lesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:maxLines="4"
            android:layout_toRightOf="@id/task_item_deadline"
            android:layout_marginTop="@dimen/margin5"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/text_size_item_lesson"
            android:textStyle="bold"

            android:text="dfklgjdgjdfkjgkldfjgkdfgkdfhkdfhgjkdfgkjdfghkgdgdfgdfgdfgdldfhjgdfkghjdfg dflghkjdfhgkdfh gkhd fkghkd"/>

        <TextView
            android:id="@+id/task_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_item_lesson"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginTop="@dimen/margin10"
            android:layout_toRightOf="@id/task_item_deadline"
            android:textSize="@dimen/text_size_item_lesson"
            android:singleLine="true"
            android:textColor="@color/md_black_1000"
            android:text="information"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>


