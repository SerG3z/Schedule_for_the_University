<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/show_task_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_margin="@dimen/margin5"
        card_view:cardCornerRadius="@dimen/cardRadius">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:src="@drawable/header9" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginTop="245dp"
            android:paddingLeft="@dimen/margin5">


            <TextView
                android:id="@+id/title_lesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lesson"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/task_item_lesson_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_lesson"
                android:layout_marginTop="@dimen/margin5"
                android:text="lesson"
                android:textSize="@dimen/text_size_show_info" />


            <TextView
                android:id="@+id/title_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/task_item_lesson_show"
                android:layout_marginTop="@dimen/margin10"
                android:text="@string/info"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/task_item_info_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_info"
                android:layout_marginTop="@dimen/margin5"
                android:text="info"
                android:textSize="@dimen/text_size_show_info" />


            <TextView
                android:id="@+id/title_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/task_item_info_show"
                android:layout_marginTop="@dimen/margin10"
                android:text="@string/time"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/task_item_deadline_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_time"
                android:layout_marginTop="@dimen/margin5"
                android:singleLine="true"
                android:text="information"
                android:textSize="@dimen/text_size_show_info" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </ScrollView>

</LinearLayout>

